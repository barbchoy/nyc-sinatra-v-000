<h1>Edit <%=@figure.name%></h1>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name: </label><input type="text" id="figure[name]" name="figure[name]" value="figure[name]"/><br>

  <h2>Title: </h2><br>
  <%@figure.titles.each do |title|%>
  <br>
  <label><%=title.name%></label>
  <input type="checkbox" id="<%=title.name%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>/>
  <%end%>
  <br><label>Add New Title</label><br>
  <input type="textbox" id="figure_title" name="title[name]"><br><br>


</form>
